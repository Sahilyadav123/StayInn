<% layout("/layouts/boilerplate") %>
<body>
    <h1 class="my-3">All listings for bnb</h1>
    <div class="row">
    <% for(let listing of allListings){%>
    
    <div class="mx-2 my-2 col-4" style="width: 19rem;">
  
        <a href="/listings/<%= listing._id %>">
            <img class="card-img-top" src="<%= listing.image %>" alt="Card image cap" style="border-radius: 8px; width: 100%; height: 200px; object-fit: cover;">
            
        </a>
        <div class="card-body" style="padding-top: 10px; padding-bottom: 5  px;">
            <p class="card-text mb-1" style="margin-bottom: 0;"><%= listing.title %></p>
            <b class="card-text "><%= listing.country %> </b>
            <p class="card-text my-1" style="margin-bottom: 0;">â‚¹ <%= listing.price %>/ night</p>
        </div>

    </div>
    <% } %>
    </div>

</body>
