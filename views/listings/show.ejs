<% layout("/layouts/boilerplate") %>

<body>
    <div class="container my-4">
        <h3 class="mb-4 text-center">Property Details </h3>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card" style="max-width: 100%; height: auto;">
                    <img class="card-img-top-1" src="<%= listing.image %>" alt="Card image cap"
                        style="border-radius: 8px; width: 100%; height: 400px; object-fit: cover;">

                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text"><strong>Location:</strong> <%= listing.location %></p>
                        <p class="card-text"><strong>Description:</strong> <%= listing.description %></p>
                        <p class="card-text"><strong>Country:</strong> <%= listing.country %></p>
                        <p class="card-text"><strong>Price:</strong> â‚¹ <%= listing.price %>/ night</p>
                    </div>
                </div>

                <div class="d-flex justify-content-between my-3">
                    <form action="/listings/<%= listing._id %>/edit" method="get">
                        <button class="btn btn-danger">Edit this property</button>
                    </form>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-dark">Delete this property</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
